<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/button_round"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/meetingkind"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center"
        android:src="@drawable/studyicon"/>
    
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp">
        <TextView
            android:id="@+id/meetingday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/nregular"
            android:includeFontPadding="false"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/meetingname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nbold"
            android:textColor="@color/basic_black"
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"
            android:text="우리 만나자"/>
    </LinearLayout>

    <TextView
        android:id="@+id/meetingdday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nbold"
        android:includeFontPadding="false"
        android:layout_marginStart="15dp"
        android:text="D-100"
        android:textColor="@color/basic_black"/>

    <ImageButton
        android:id="@+id/noticeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginStart="30dp"
        android:layout_gravity="center"
        android:src="@drawable/alertbutton"/>



</LinearLayout>