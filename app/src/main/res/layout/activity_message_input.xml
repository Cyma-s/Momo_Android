<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MessageInput">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="268dp"
                android:fontFamily="@font/nbold"
                android:includeFontPadding="false"
                android:text="답변란"
                android:textColor="@color/basic_black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/menubutton"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.545" />

            <ImageButton
                android:id="@+id/menubutton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:src="@drawable/menubar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:text="모임 이름"
        android:textColor="@color/basic_black"
        android:includeFontPadding="false"
        android:textSize="18sp"
        android:fontFamily="@font/nbold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/meeting_image_answer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/studyicon"/>

        <TextView
            android:id="@+id/meeting_name_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="모모"
            android:textColor="@color/basic_black"
            android:includeFontPadding="false"
            android:textSize="28sp"
            android:fontFamily="@font/nbold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="예상 소요 시간"
            android:textColor="@color/basic_black"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:fontFamily="@font/nbold"/>

        <TextView
            android:id="@+id/meeting_times_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="1시간"
            android:textColor="@color/basic_black"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:fontFamily="@font/nmed"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="모임 위치"
            android:textColor="@color/basic_black"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:fontFamily="@font/nbold"/>

        <TextView
            android:id="@+id/meeting_place_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="1시간"
            android:textColor="@color/basic_black"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:fontFamily="@font/nmed"/>
    </LinearLayout>

    <Button
        android:id="@+id/answerInfo_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/nregular"
        android:text="참여"
        android:textColor="@color/basic_black"
        android:textSize="16sp"/>

</LinearLayout>