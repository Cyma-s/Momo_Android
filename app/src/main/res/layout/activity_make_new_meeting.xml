<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakeNewMeetingActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/backbutton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:src="@drawable/backbutton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nbold"
                android:includeFontPadding="false"
                android:text="새 모임 생성"
                android:textColor="@color/basic_black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/menubutton"
                app:layout_constraintHorizontal_bias="0.091"
                app:layout_constraintStart_toEndOf="@+id/backbutton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.515" />

            <ImageButton
                android:id="@+id/menubutton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:src="@drawable/menubar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 이름"
        android:fontFamily="@font/nbold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textSize="22sp"
        android:includeFontPadding="false"
        android:textColor="@color/basic_black"/>
    
    <EditText
        android:id="@+id/newMeetingName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/nmed"
        android:includeFontPadding="false"
        android:textColor="@color/basic_black"
        android:textColorHint="@color/basic_black"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:elevation="10dp"
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:background="@drawable/basic_edittext_round"
        android:hint="이름을 정해보세요"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:fontFamily="@font/nregular"
        android:includeFontPadding="false"
        android:text="*20자 이내여야 해요."
        android:textColor="@color/grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원수"
        android:fontFamily="@font/nbold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:includeFontPadding="false"
        android:textColor="@color/basic_black"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/twoPeople"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/button_grey"
            android:text="2"
            android:textSize="17sp"
            android:elevation="10dp"
            android:translationZ="3dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/circlebutton"/>

        <Button
            android:id="@+id/threePeople"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/button_grey"
            android:text="3"
            android:textSize="17sp"
            android:layout_marginStart="30dp"
            android:elevation="10dp"
            android:translationZ="3dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/circlebutton"/>

        <Button
            android:id="@+id/fourPeople"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/button_grey"
            android:text="4"
            android:textSize="17sp"
            android:layout_marginStart="30dp"
            android:elevation="10dp"
            android:translationZ="3dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/circlebutton"/>

        <Button
            android:id="@+id/fivePeople"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/button_grey"
            android:text="5"
            android:textSize="17sp"
            android:layout_marginStart="30dp"
            android:elevation="10dp"
            android:translationZ="3dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/circlebutton"/>

        <Button
            android:id="@+id/sixPeople"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/button_grey"
            android:layout_marginStart="30dp"
            android:text="6"
            android:textSize="17sp"
            android:elevation="10dp"
            android:translationZ="3dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circlebutton"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 종류 선택"
        android:fontFamily="@font/nbold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:includeFontPadding="false"
        android:textColor="@color/basic_black"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/meeting_kind_button_round"
                android:drawableStart="@drawable/small_food_icon"
                android:elevation="5dp"
                android:fontFamily="@font/nregular"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="맛집/카페"
                android:textSize="12sp"
                android:translationZ="5dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/meeting_kind_button_round"
                android:drawableStart="@drawable/small_study_icon"
                android:elevation="5dp"
                android:fontFamily="@font/nregular"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="스터디"
                android:textSize="12sp"
                android:translationZ="5dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/meeting_kind_button_round"
                android:drawableStart="@drawable/small_health_icon"
                android:elevation="5dp"
                android:fontFamily="@font/nregular"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="운동"
                android:textSize="12sp"
                android:translationZ="5dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/meeting_kind_button_round"
                android:drawableStart="@drawable/small_travel_icon"
                android:elevation="5dp"
                android:fontFamily="@font/nregular"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="여행"
                android:textSize="12sp"
                android:translationZ="5dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/meeting_kind_button_round"
                android:drawableStart="@drawable/small_other_icon"
                android:elevation="5dp"
                android:fontFamily="@font/nregular"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="직접 추가"
                android:textSize="12sp"
                android:translationZ="5dp" />

        </RadioGroup>

    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예상 소요 시간"
        android:fontFamily="@font/nbold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:includeFontPadding="false"
        android:textColor="@color/basic_black"/>

    <NumberPicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:theme="@style/NumberPicker"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="다음"
        android:textColor="@color/basic_black"
        android:background="@drawable/button_round"
        android:layout_gravity="end"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/nregular"/>

</LinearLayout>